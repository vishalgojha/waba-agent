{
  "name": "@vishalgojha/waba-agent",
  "version": "0.1.1",
  "description": "CLI + agent toolkit for WhatsApp Business Cloud API automation (India SMB focused).",
  "license": "MIT",
  "author": "Vishal Gopal Ojha",
  "repository": {
    "type": "git",
    "url": "https://github.com/vishalgojha/waba-agent"
  },
  "keywords": [
    "whatsapp",
    "waba",
    "meta",
    "cloud-api",
    "cli",
    "agent"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "waba": "bin/waba.js",
    "waba-agent": "bin/waba.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/",
    "src/",
    "src-ts/",
    "public/",
    "domain/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "node bin/waba.js",
    "start:ts": "tsx src-ts/index.ts",
    "tui:ts": "tsx src-ts/index.ts tui",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test:tui:ts": "tsc -p tsconfig.json --outDir .tmp-ts && node .tmp-ts/tests/tui-view-model.spec.js",
    "test:ts:spec": "tsc -p tsconfig.json --outDir .tmp-ts && node .tmp-ts/tests/tui-view-model.spec.js && node .tmp-ts/tests/replay-guard.spec.js",
    "test": "node scripts/smoke.js",
    "test:config": "node src/tests/config.test.js",
    "test:readiness": "node src/tests/readiness.test.js",
    "test:ai": "node src/tests/ai.test.js",
    "test:chat": "node src/tests/chat.test.js",
    "test:gateway": "node src/tests/gateway.test.js",
    "test:hatch": "node src/tests/hatch.test.js",
    "test:cli": "node src/tests/cli-autostart.test.js",
    "test:start": "node src/tests/start.test.js",
    "test:resale": "node src/tests/resale.test.js",
    "validate:prod": "node scripts/validate-production.js",
    "handoff:update": "node scripts/handoff-update.js",
    "resale:activate": "node scripts/activate-resale-magic.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "express": "^4.21.2",
    "figlet": "^1.8.0",
    "fs-extra": "^11.2.0",
    "ink": "^5.2.1",
    "ink-text-input": "^6.0.0",
    "ink-ui": "^0.4.0",
    "inquirer": "^12.4.2",
    "ngrok": "^5.0.0-beta.2",
    "nodemailer": "^8.0.1",
    "ora": "^8.2.0",
    "razorpay": "^2.9.6",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
